rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.token.email == 'admin@kombucha.com'
      );
    }

    // --- PRODUCTS & CATALOG ---
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- CONTENT (Posts, Recipes) ---
    match /posts/{postId} {
      allow read: if true; // Public blog
      allow write: if request.auth != null; // Temp: Allow any auth user (Admin claim might be missing)
    }
     match /recipes/{recipeId} {
      allow read: if true;
      allow write: if request.auth != null; // Temp
    }

    // --- DELIVERY ---
    match /deliverySlots/{slotId} {
      allow read: if true; // Client needs to see availability
      allow write: if isAdmin(); // Admin can manage slots directly
    }
    
    // --- ORDERS (SECURE) ---
    match /orders/{orderId} {
      // Allow Admins to manage orders
      allow read, write: if isAdmin();
    }
    

    // --- CUSTOMERS ---
    match /customers/{phone} {
       // ... (existing comments)
       allow read, write: if false; 
    }

    // --- MEMBERSHIPS (Roles) ---
    match /memberships/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- INVENTORY ---
    match /inventory/{productId} {
      allow read: if true; // Used for "Em estoque" display?
      allow write: if false; // Moved to API
    }
    
    match /stockMovements/{id} {
        allow read, write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
